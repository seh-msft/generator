#!/usr/bin/env rc
# Copyright (c) 2021, Microsoft Corporation, Sean Hinchee
# Licensed under the MIT License.

# Get coverage on one or all APIs 

argv0 = $0
fn usage {
	echo >[1=2] 'usage:' $argv0 '[-s] [-d file.cfg] [-j jsons/]'
	exit 1
}

dir = jsons/
db = alice.cfg

sum = no

while(~ $1 -*){
	switch($1){
	case -d
		shift
		db = $1

	case -j
		shift
		dir = $1

	case -s
		sum = yes

	case -*
		usage
	}
	shift
}

fn summary {
	{
		for(file in `{ls $dir}) {
			go run generator.go -D -auth `{getbearer} -db $db -api $dir/$file $* > /dev/null
		} 
	} |[2] grep '%' | awk '{print $2}' | 
	awk -F '/' 'BEGIN{
		top = 0;
		bottom = 0;
	}
	{
		top += $1;
		bottom += $2;
	} 
	END{
		if(top > 0 && bottom > 0){
			printf "%0.2f%%\n", (top / bottom) * 100;
		}else{
			printf "0.00%%\n";
		}
	}'

}

fn coverage {
	for(file in `{ls $dir}) {
		echo
		go run generator.go -D -auth `{getbearer} -db $db -api $dir/$file $* > /dev/null
		echo >[2=1] -n $file^' â†’ '
	} |[2] grep '%' | awk '{printf "%s", $4}' | sed 's/[)(]//g'
	echo
}

if(~ $sum yes){
	summary
}else{
	coverage
}

